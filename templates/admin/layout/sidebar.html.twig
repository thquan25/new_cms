<div data-color="reddark" class="sidebar">
    <div class="sidebar-wrapper">
        <div class="logo">
            <a href="{{ path('admin_dashboard') }}" class="simple-text">
                <div class="logo-img"><img src="{{ asset('images/admin/logo-neuillytech.png') }}" alt=""></div>
            </a>
        </div>
        <ul class="nav">
            <li class="{% block dashboard_active %}{% endblock %}">
                <a href="{{ path('admin_dashboard') }}" class="nav-link">
                    <i aria-hidden="true" class="fa fa-tachometer"></i>
                    <p>{% trans %}Dashboard{% endtrans %}</p>
                </a>
            </li>
            <li class="{% block articles_active %}{% endblock %}">
                <a  class="nav-link" data-toggle="collapse" href="#statistique" aria-expanded="false">
                    <i aria-hidden="true" class="fa fa-newspaper-o"></i>
                    <p>{% trans %}Blog{% endtrans %}</p>
                    <b class="caret"></b>
                </a>
                <div class="collapse" id="statistique">
                    <ul class="nav"> 
                        <li>
                            <a class="nav-link" href="articles.php"><span class="sidebar-normal"> {% trans %}Articles{% endtrans %} </span></a>
                        </li>
                        <li>
                            <a class="nav-link" href="#"><span class="sidebar-normal"> {% trans %}Category{% endtrans %} </span></a>
                        </li>
                    </ul>
                </div>
            </li>
            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <li class="">
                <a href="#" class="nav-link">
                    <i aria-hidden="true" class="fa fa-sign-out"></i>
                    <p>{% trans %}Settings{% endtrans %}</p>
                </a>
            </li>
            {% endif %}
            <li class="">
                <a href="/logout" class="nav-link">
                    <i aria-hidden="true" class="fa fa-sign-out"></i>
                    <p>{% trans %}Logout{% endtrans %}</p>
                </a>
            </li>
        </ul>
    </div>
</div>

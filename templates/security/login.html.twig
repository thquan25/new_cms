{% extends 'security/layout.html.twig' %}

{# {% block title %}Log in!{% endblock %} #}

{% block body %}

<div class="login-content">
    <div class="block-form-center">
        {% if error %}
            <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {# <div class="alert alert-warning" role="alert">Veuillez remplir tous les champs</div>
        <div class="alert alert-danger" role="alert">Nom d'utilisateur ou Mot de passe est incorrect.</div> #}
        <div  class="form-sms">
            <div class="row">
                <div class="col-sm-4 hidden-xs">
                    <img src="{{ asset('images/admin/block.png') }}" alt="">
                </div>
                <div class="col-sm-8 wp_f_login">
                    <form method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group has-icon"> 
                            <i class="icon material-icons">account_circle</i>
                            <input type="email" class="form-control" id="" name="email" placeholder="Nom d'utilisateur">
                            {# <small class="text-danger">Ce champ est obligatoire</small> #}
                        </div>
                        <div class="form-group has-icon">
                            <i class="icon material-icons">vpn_key</i>
                            <input type="password" class="form-control" id="" name="password" placeholder="Mot de passe">
                        </div>
                        <div class="row"> 
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary">CONNEXION >> </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
